<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    //pilihtanggal
    <LinearLayout
        android:id="@+id/layout_tgl"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:text="Tanggal Tayang"
                android:textSize="15sp" />

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_tgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>

    //pilihjam
    <LinearLayout
        android:id="@+id/layout_jam"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:text="Jam Tayang"
                android:textSize="15sp" />

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_jam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Kursi yang dipesan :"/>
           <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
               android:id="@+id/btnCount"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:backGroundColor="@color/colorAccent"
               android:gravity="right">

           </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
       </RelativeLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_cari_kursi"
            android:text="CARI"
            />


        <!--<Spinner-->
            <!--android:id="@+id/spinner"-->
            <!--android:layout_width="357dp"-->
            <!--tools:layout_editor_absoluteX="19dp"-->
            <!--tools:layout_editor_absoluteY="27dp"-->
            <!--android:layout_height="46dp">-->
        <!--</Spinner>-->
        <TextView
            android:layout_marginTop="190dp"
            android:id="@+id/txt_seat_selected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Book"
            android:textSize="20sp"
            android:padding="3dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>